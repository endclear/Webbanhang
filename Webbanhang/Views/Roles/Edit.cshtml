@using Webbanhang.Models
@model Role
@{
    ViewBag.Title = "Sửa Quyền";
    Layout = "~/Views/Layout/_AdminLayout.cshtml";
}

<div style="border-bottom:1px solid #808080;padding-bottom:4px;margin:5px">
    <h3> Chỉnh sửa quyền</h3>
</div>

@using (Html.BeginForm("Edit", "Roles", FormMethod.Post, new { id = "FormRole" }))
{
    <div class="form-group" style="margin-top:10px">
        <div class="row" style="margin-top:10px">
            <div class="col-md-6" style="display:flex;">
                <label class="col-md-3">Mã quyền: </label>
                <input type="text" name="RoleID" readonly="readonly" value="@Model.RoleID" class="RoleID form-control" />
            </div>
            <span style="margin-left:10px;color:red" class="lblError"></span>
        </div>

        <div class="row" style="margin-top:10px">
            <div class="col-md-6" style="display:flex;">
                <label class="col-md-3">Tên quyền:</label>
                <input type="text" name="RoleName" value="@Model.RoleName" class="RoleName form-control" />
            </div>
        </div>
    </div>
    <div>
        <input id="btnCreate_Role" value="Save" type="submit" class="btn btn-success" />
        <a href="/Roles" class="btn btn-info">Quay lại</a>
    </div>
    <div class="clearfix" style="border-bottom:1px solid #808080;padding-bottom:4px;margin:5px"></div>
}
