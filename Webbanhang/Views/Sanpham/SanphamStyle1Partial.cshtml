@using Webbanhang.Models;
@model IEnumerable<sanpham>

<div class="content-top">
    <h1>@Model.First().loaisanpham.TenLoai Mới Nhất</h1>
    <div class="grid-in">
        @foreach (var item in Model.Take(3))
        {
            <div class="col-md-4 grid-top">
                <a href="@Url.RouteUrl("sanpham",new { id=item.MaSP,bidanh = item.Bidanh})" class="b-link-stripe b-animate-go  thickbox">
                    <img class="img-responsive" src="@Url.Content("~/Content/sanpham/"+item.HinhAnh)" alt="">
                    <div class="b-wrapper">
                        <h3 class="b-animate b-from-left    b-delay03 " >
                            @item.CauHinh
                        </h3>
                    </div>
                </a>


                <p><a href="single.html">@item.TenSP</a></p>
            </div>
        }
        <div class="clearfix"> </div>
    </div>
    
</div>
